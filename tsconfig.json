{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "app/*": [
        "./app/*"
      ],
      "components/*": [
        "./app/components/*"
      ],
      "actions/*": [
        "./app/actions/*"
      ],
      "reducers/*": [
        "./app/reducers/*"
      ],
      "models/*": [
        "./app/models/*"
      ],
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
